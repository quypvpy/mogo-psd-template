mixin storyItem(src="../images/img-blog1.png",dateNumber=15,dateText="Jan",title="Lorem ipsum, dolor sit amet consectetur adipisicing elit.",desc= "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aliquam maxime, soluta eum magnam quisquam omnis fuga quis consequuntur laboriosam! Libero eos, dicta rerum non dolorem commodi ducimus praesentium deleniti repellat.",views=1000,comments= 100)
	li.story-item
		.story-media
			img.story-image(src= src)
			.story-date
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text
			p.story-desc-inner= desc
		.story-meta
			.story-meta-item
				i.fa.fa-eye.story-icon
				span.story-meta-number.text= views
			.story-meta-item
				i.fa.fa-comment.story-icon
				span.story-meta-number.text= comments

mixin quoteItem(src= "../images/img-quote.png",type=false,desc= "Lorem ipsum dolorLorem ipsum dolor, sit amet consectetur adipisicing elit. Temporibus a, optio natus officia velit incidunt esse pariatur adipisci at iusto dolore, odio quo excepturi sunt facilis sint repellendus cum quibusdam?",author= "Jon Doe")
	.quote-item
		if type==false
			.quote-icon
				img(src= src)
		else
			img.quote-image(src= src)
		.quote-info
			p.quote-desc= desc
			span.quote-author= author